{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Game",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Isrc/include",
                "-Lsrc/lib",
                "-o",
                "build/game",
                "main.c",
                "src/gameFiles/gameEntities.c",
                "src/gameFiles/animations.c",
                "src/gameFiles/utils.c",      
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the game executable"
        },
        {
            "label": "Run Game",
            "type": "shell",
            "command": "build/game.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
